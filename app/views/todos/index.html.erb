 <main class="TodoPageMain">
    <h1 class="TodoPage-title">My Todo-List</h1>
    <form class="AddTodo"
          action="/todos"
          method="POST" >
      <input class="AddTodos-text" type="text" name="todo_text" placeholder="What's next">
      <input class="AddTodos-date" name="due_date" type="date">
      <input class="AddTodos-button" type="submit" value="Add">
    </form>

    <%= render partial: "todo-section",
    locals:{
      section_title:"Overdue",
      todos:Todo.overdue,
      show_due_date: true
    } %>
   <%= render partial: "todo-section",
    locals:{
      section_title:"Due Today",
      todos:Todo.due_today,
      show_due_date: false
    } %>
    <%= render partial: "todo-section",
    locals:{
      section_title:"Due later",
      todos:Todo.due_later,
      show_due_date: true
    } %>

  </main>
