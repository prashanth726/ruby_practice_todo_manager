 <main class="TodoPageMain">
    <h1 class="TodoPage-title">My Todo-List</h1>
    <section class="AddTodo">
      <input class="AddTodos-text" type="text" placeholder="What's next">
      <input class="AddTodos-date" type="date">
      <input class="AddTodos-button" type="button" value="Add">
    </section>

    <%= render partial: "todo-section",
    locals:{
      section_title:"Overdue",
      todos:Todo.overdue,
      show_due_date: true
    } %>
   <%= render partial: "todo-section",
    locals:{
      section_title:"Due Today",
      todos:Todo.due_today,
      show_due_date: false
    } %>
    <%= render partial: "todo-section",
    locals:{
      section_title:"Due later",
      todos:Todo.due_later,
      show_due_date: true
    } %>

  </main>
